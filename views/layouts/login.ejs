<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     <link rel="stylesheet" href="css/login.css">
     
      
</head>
<style>

p{
    font-weight: light;
}

a{
    text-decoration: none;
    font-weight: bold;
}

#secreteKey{
    display: none;
}

</style>
<body id="body" class="bg-light">
     <div class="container" >
        <div class="row mt-5 m-1"> 
            <div class="col-lg-4 bg-white m-auto border-top-6 border-primary rounded shadow wrapper"> 
                <span><a href="/"><i class="bi bi-house border-primary"></i></a></span>
                <h2 class="text-center pt-3">Login</h2>

                <!-- Flash Message -->
                <%if (messages.error) {%>
                    <div class="alert alert-danger text-center d-flex justify-content-between ">
                        <%= messages.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close "></button>
                    </div>
                <% } %>

                <form action="/login" method="POST">

                    <div class="form-check form-check-inline mb-2" onclick="showInput()">
                        <input class="form-check-input" type="checkbox" id="adminCheckBox" value="admin">
                        <label class="form-check-label" for="adminCheckBox">Admin</label>
                    </div>

                    <div class="input-group mb-3" id="secreteKey">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input type="password" class="form-control" name="secreteKey" placeholder="Secrete Key">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        <input type="text" class="form-control" name="email" placeholder="Email" required>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <p class="text-center text-muted mt-2">Don't Have an Account? <a href="/register">Please Register</a></p>
                    </div>
                </form>

            </div>
        </div>
     </div>

     <script>
        let check = document.getElementById('secreteKey')
        let display = 1
       function showInput(){
            if(display == 1){
                check.style.display= "flex"
                display=0;
            }else{
                check.style.display="none"
                display=1
            }
            
        }
        
        // function hideInput(){
        //    document.getElementById('secreteKey').style.display= "flex"    
        // }

        

     </script>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>